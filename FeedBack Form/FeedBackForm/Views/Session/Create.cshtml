@{
    ViewData["Title"] = "Create";
}

@model DataAccessLayer.Model.Session


<form method="post" asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <h3> Add Session </h3>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="SessionName"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="SessionName" placeholder="Session Name" />
                    <span asp-validation-for="SessionName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="ConductorId"></label>
                </div>
                <div class="col-6">
                    <select asp-for="ConductorId" asp-items="@ViewBag.conductors" class="form-control">
                        <option selected="">--Select--</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="SpeakerId"></label>
                </div>
                <div class="col-6">
                    <select asp-for="SpeakerId" asp-items="@ViewBag.conductors" class="form-control">
                        <option selected="">--Select--</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Duration"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Duration" placeholder="Duration" />
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Date"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Date" placeholder="Date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <input type="submit" class="btn btn-info w-50" />
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-danger w-50"> Back </a>
                </div>
            </div>
        </div>
    </div>
</form>
